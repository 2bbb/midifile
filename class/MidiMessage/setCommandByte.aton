void MidiFile::setCommandByte(int track, int index, int value) {
   MidiFile::getEvent(track, index).setCommandByte(value);
}

void MidiMessage::setCommandByte(int value) {
   if (data.size() &lt; 1) {
      data.resize(1);
   }
   data[0] = (uchar)(value &amp; 0xff);
}

